{
  "tasks": [
    {
      "type": "shell",
      "label": "make Debug",
      "command": "make",
      "args": [
        "all"
      ],
      "options": {
        "cwd": "/usr/bin",
        "env": {
          "DEBUG": "true"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "디버거에서 생성된 작업입니다."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ 활성 파일 빌드",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-Wall",
        "-fno-strict-aliasing",
        "-g",
        "${fileDirname}/**.cpp",
        "${workspaceFolder}/CoreLib/**.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "디버거에서 생성된 작업입니다."
    }
  ],
  "version": "2.0.0"
}